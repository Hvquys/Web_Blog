@model BE_Blog.post
@if (Model.Count > 0)
{
    for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title">@item.Title</h2>
                <p class="card-text">@item.Content</p>
                <a href="#" class="btn btn-primary" id="PostId_@item.Title" onclick="xemThem('@item.Title')">Xem Thêm</a>
            </div>
        </div>
    }
}
